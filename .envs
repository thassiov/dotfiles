# My Scripts
export MY_SCRIPTS=~/bin

# BROWSER
export BROWSER=brave

# EDITOR
export EDITOR=nvim

# GO PATH
export GO_PATH=/usr/bin/go

export NPM_LOCAL=~/.local/bin

export RUBY_PATH=~/.local/share/gem/ruby/2.7.0/bin

export PATH=$PATH:$GO_PATH:$NPM_LOCAL:$RUBY_PATH:$MY_SCRIPTS

export KUBECONFIG=~/.kube/config

# fzf
export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!{.git/*,.meteor/*}"'
# Using highlight (http://www.andre-simon.de/doku/highlight/en/highlight.html)
export FZF_CTRL_T_OPTS="--preview '(highlight -O ansi -l {} 2> /dev/null || cat {} || tree -C {}) 2> /dev/null | head -200'"

# vi-mode
export KEYTIMEOUT=1
